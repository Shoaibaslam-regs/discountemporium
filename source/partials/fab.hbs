
<div class="fab-container left">
  <button class="fab-main" id="fabMain">☰</button>
  <div class="fab-options" id="fabOptions">
    <button class="fab-option" id="scrollTopBtn">↑</button>
    <button class="fab-option" onclick="openCart()">
      <i class="bx bx-home"></i>
    </button>
    <button class="fab-option" onclick="window.location.href='/contact'">
      <i class="bx bx-phone-outgoing bx-tada"></i>
    </button>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const fabMain = document.getElementById("fabMain");
  const fabOptions = document.getElementById("fabOptions");
  const scrollTopBtn = document.getElementById("scrollTopBtn");

  // toggle menu
  fabMain.addEventListener("click", () => {
    fabOptions.classList.toggle("active");
    fabMain.textContent = fabOptions.classList.contains("active") ? "✖" : "☰";
  });

  // smooth scroll to top
  scrollTopBtn.addEventListener("click", () => {
    const duration = 600;
    const start = window.scrollY;
    const startTime = performance.now();

    function animateScroll(currentTime) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const ease = 1 - Math.pow(1 - progress, 3);
      window.scrollTo(0, start * (1 - ease));
      if (progress < 1) requestAnimationFrame(animateScroll);
    }

    requestAnimationFrame(animateScroll);
  });
});

function openCart() {
  window.location.href = "/";
}
</script>
