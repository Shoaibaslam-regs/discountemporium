 <div class="search-guide">
  <span id="guideText"></span>
</div>
<script>

    document.addEventListener("DOMContentLoaded", () => {
      const guideEl = document.getElementById("guideText");
      const searchInput = document.getElementById("searchInput");

      searchInput.addEventListener("input", () => {
  const query = searchInput.value.toLowerCase();
  const products = document.querySelectorAll(".product-card");

  let found = false;
  products.forEach(card => {
    const name = card.querySelector("h3").textContent.toLowerCase();
    if (name.includes(query)) {
      card.style.display = "block";
      found = true;
    } else {
      card.style.display = "none";
    }
  });

  if (!found) {
    noResults.classList.add("show");
  } else {
    noResults.classList.remove("show");
  }
});
      const suggestions = [
        " Search by price ",
        " Search by color",
        " Search by brand",
        " Search by type",
      ];

      const VISIBLE_MS = 3500;  
      const EXIT_MS = 450;  
      let index = 0;
      let timerId = null;
      let paused = false;
 
      function setTextAndEnter(text) {
        guideEl.classList.remove("enter", "exit"); 
        void guideEl.offsetWidth;
        guideEl.textContent = text;
        guideEl.classList.add("enter");
      }
  
       
      function scheduleNext() {
        clearTimeout(timerId);
        if (paused) return;

         
        timerId = setTimeout(() => {
           
          guideEl.classList.remove("enter");
          guideEl.classList.add("exit");
 
          timerId = setTimeout(() => {
            index = index % suggestions.length;
            setTextAndEnter(suggestions[index]);
            index = (index + 1) % suggestions.length;
            scheduleNext(); 
          }, EXIT_MS);
        }, VISIBLE_MS);
      }
 
      setTextAndEnter(suggestions[index]);
      index = (index + 1) % suggestions.length;
      scheduleNext();
      if (searchInput) {
        searchInput.addEventListener("focus", () => {
          paused = true;
          clearTimeout(timerId);
          guideEl.classList.remove("enter", "exit"); 
          guideEl.style.opacity = 1;
        });
        searchInput.addEventListener("blur", () => {
          paused = false; 
          timerId = setTimeout(scheduleNext, 500);
        });
      }
 
      guideEl.parentElement.addEventListener("mouseenter", () => {
        paused = true;
        clearTimeout(timerId);
      });
      guideEl.parentElement.addEventListener("mouseleave", () => {
        if (
          !document.activeElement ||
          document.activeElement.id !== "searchInput"
        ) {
          paused = false;
          scheduleNext();
        }
      });
    }); 
    
    </script>