<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  {{>headerlink}}

</head>

<body>

  {{>header}}
  {{>fab}}


  <div class="register-page-wrapper">
    <h2>Create Account <span><a href="/index"><i class="bx bx-home"></i></a>
      </span>
    </h2>
    {{#if error}}
    <div id="notify" class="form-alert error-msg">
      {{error}}
    </div>
    {{/if}}

    {{#if success}}
    <div id="notify" class="form-alert success-msg">
      {{success}}
    </div>
    {{/if}}

    <form action="/register" method="POST">
      <input type="text" name="name" maxlength="14" placeholder="Full Name" required />
      <small class="error"></small>
      <input type="email" name="email" maxlength="25" placeholder="Email" required />
      <small class="error"></small>
      <div class="password-field">
        <input type="password" id="password" minlength="6" name="password" placeholder="Password" required />
      </div>

      <div class="password-field">
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
      </div>
      <button1 type="button" class="toggle-btn" onclick="toggleBothPasswords(this)">
        <i class="bx bx-show"></i>
        <span>Show Passwords</span>
      </button1>
      <button type="submit">Register</button>
    </form>

    <div class="register-footer">
      Already have an account? <a href="/login">Login</a>
    </div>
  </div>
  {{>footer}}
</body>
<script src="/js/mailacc.js"></script>
<script src="/js/showhide.js"></script>
<script src="/js/validate.js"></script>

</html>